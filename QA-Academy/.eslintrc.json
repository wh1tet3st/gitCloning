{
  "extends": "eslint:recommended",
  "plugins": ["markdown"],
  "env": {
    "es6": true,
    "mocha": true
  },
  "rules": {
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "semi": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "no-undef": "off"
  },
  "globals": {
    "cy": false,
    "Cypress": false
  }
}
